@page
@model CourseworkAC31007Agile.Pages.QuestionnaireManagmentModel
@{
}
@{
    ViewData["Title"] = "Manage Questionnaire";
}

@{
    Layout = "_questionnaireLayout";
}

<style>
    .profile-form {
        width: 1100px;
        margin: 25px auto;
    }

        .profile-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
            border-radius: 30px;
        }

        .profile-form h2 {
            margin: 0 0 15px;
        }

    .profile-control, .btn {
        min-height: 38px;
    }

    .btn {
        font-size: 15px;
        border-radius: 20px;
        width: 150px;
    }
</style>

<div class="profile-form">
    <form>
        <div class="container">
            <div class="profile-form">
                <div class="container">
                    <div class="row">
                        <div class="row">
                            <div class="col-sm-4">
                                <a href="createQuestionnaire" class="btn btn-primary btn-lg">Create Questionnaire</a>
                            </div>
                            <div class="col-sm-4">
                                <a href="exportQuestionnaireResults" class="btn btn-primary btn-lg">Export Questionnaire</a>
                            </div>
                            <div class="col-sm-4">
                                <a href="shareQuestionnaire" class="btn btn-primary btn-lg">Share Questionnaire</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


